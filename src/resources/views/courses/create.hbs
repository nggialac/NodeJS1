<div class="mt-4">
    <h3>Đăng khóa học</h3>

    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="" class='form-control' name="name" id="name"
                placeholder="Enter Name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="" class='form-control' name="description" id="des"
                placeholder="Enter Description">
        </div>
        <div class="form-group"
            <label for="videoId"> Hình ảnh</label>
            <input type="" class='form-control' name="videoId" id="videoId"
                placeholder="Enter image">
        </div>
        <div class="form-group">
            <label for="level">level</label>
            <input type="" class='form-control'  name="level" id="level"
                placeholder="Enter level">
