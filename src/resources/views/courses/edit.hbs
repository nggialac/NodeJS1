<div class="mt-4">
    <h3>Sửa khóa học</h3>

    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="" class='form-control' name="name" value="{{course.name}}" id="name" placeholder="Enter Name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea type="" class='form-control' name="description" value="" id="des"
                placeholder="Enter Description">{{course.description}}</textarea>

        </div>
        <div class="form-group" <label for="videoId"> Hình ảnh</label>
            <input type="" class='form-control' name="videoId" value="{{course.videoId}}" id="videoId"
                placeholder="Enter image">
        </div>
        <div class="form-group">
            <label for="level">level</label>
            <input type="" class='form-control' name="level" value="{{course.level}}" id="level"
                placeholder="Enter level">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>